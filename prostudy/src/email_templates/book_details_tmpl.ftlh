<html>
<style type="text/css">
table {
	border-collapse: collapse;
	font-size:11px;
}

th {
	border: 1px solid black; 
	border-spacing: 5px; 
	height: 20px; 
	padding: 7px;
}

td {
	border: 1px solid black;
	border-spacing: 5px; 
	height: 15px; 
	padding: 5px;
}

 table.one, td.one {
 	border: none;
 }
 

</style>
<#list 0..schoolList?size-1 as j>
  <p align="center">${instituteName}</p>
  <#if paymentTypeList?size==0>
  <p align="center">${gvspName}</p>
  <#else>
  <#list 0..paymentTypeList?size-1 as k>
  <#if j==k>
  <p align="center">${gvspName+" "+paymentTypeList[k]+" "+" Format"}</p>
  </#if>
  </#list>
  </#if>
  <br></br>
  <p style="font-size:11px;"><b>Reg. No.:</b> ${schoolList[j].autoGenerated}</p>
  <p style="font-size:11px;"><b>School Name:</b> ${schoolList[j].schoolName}</p>
  <p style="font-size:11px;"><b>At. address:</b> ${schoolList[j].address.city}</p>
  <br></br>
  <#list schoolList[j].examDetailList as examList>
  <#if examList.yearOfExam == yearOfExam>
  <#if examList.bookSummary.bookDetail??>
  <#if examList.bookSummary.bookDetail[0].standard != "">
  <table border="1"
	style="width: 100%; height: 100%; ">
	<caption align="left" style="border-spacing: 5px;padding: 3px;"><b>Book Details: </b></caption>
	<tbody>

		<tr>
			<th>Standard </th>
			<th>Book Name</th>
			<th>Qty.</th>
			<th>Book Price</th>
			<th>Book Amount</th>
			<th>Exam Fees</th>
			<th>GRF Total</th>
		</tr>
		<#list examList.bookSummary.bookDetail as bookDetails>
			<tr>
			<td>${bookDetails.standard}</td>
			<td>${bookDetails.bookName}</td>
			<td align="right">${bookDetails.totalStud}</td>			
			<td align="right">${bookDetails.bookPrise}</td>
			<td align="right">${bookDetails.totalFees}</td>
			<td align="right">${bookDetails.examFees}</td>
			<td align="right">${bookDetails.totalExamFees}</td>
		</tr>
		</#list>
		<#list 0..overallTotalList?size-1 as i>
		<#if i==j>
		<tr>
		<td colspan="2" align="center">Total A</td>
		<td align="right">${overallTotalList[i].totalStudent}</td>
		<td></td>
		<td align="right">${overallTotalList[i].totalBookAmount}</td>
		<td></td>
		<td align="right">${overallTotalList[i].totalGRFFees}</td>
		</tr>
		<tr>
		<td colspan="2" align="center">20% Expensess</td>
		<td></td>
		<td></td>
		<td align="right">${overallTotalList[i].bookAmt20per}</td>
		<td></td>
		<td align="right">${overallTotalList[i].examAmt20per}</td>
		</tr>
		<tr>
		<td colspan="2" align="center">Grand Total</td>
		<td></td>
		<td></td>
		<td align="right">${overallTotalList[i].bookAmt80per}</td>
		<td></td>
		<td align="right">${overallTotalList[i].examAmt80per}</td>
		</tr>
		</#if>
		</#list>
			
		</tbody>
		</table>
		</#if>
		</#if>
	<br></br>
		<#if examList.paymentDetail??>
		<caption align="left" style="border-spacing: 5px;padding: 3px; font-size:11px;"><b>Payment Details: </b></caption>		
		<#list examList.paymentDetail as paymentDetail>
			<#if paymentDetail.payReceivedBy == 'D.D '>	
			<p style="font-size:11px; text-align: left;"><b>D.D No.:</b> ${paymentDetail.transactionNumber}</p>
  			<p style="font-size:11px; text-align: left;"><b>Bank Name:</b> ${paymentDetail.ddBankName}</p>
  			<p style="font-size:11px; text-align: left;"><b>Branch:</b> ${paymentDetail.ddBranchName}</p>
  			<p style="font-size:11px; text-align: left;"><b>D.D Date:</b> ${ddDate}</p>			
			</#if>
			
			<p style="font-size:11px; text-align: left;"><b>Deposit in:</b> ${paymentDetail.nameOfBank}</p>
  			<p style="font-size:11px; text-align: left;"><b>Branch:</b> ${paymentDetail.branchName}</p>
  			<p style="font-size:11px; text-align: left;"><b>Amt. Rs.</b> ${paymentDetail.payAmount}</p>
  			<p style="font-size:11px; text-align: left;"><b>Deposit Date:</b> ${depositDate}</p>
  			
		</#list>
		</#if>
		</#if>
		</#list>
		
</#list>		
</html>